@model PersoneDetailViewModel
<section>

    <div>
        <ul>
            <li>Nome: @Model.nome</li>
            <li>Cognome: @Model.cognome</li>
            <li>Et√†: @Model.eta</li>
        </ul>
    </div>
    <div><a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-plus"></i>
